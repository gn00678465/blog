    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
    overflow: auto;
    direction: ltr!important;
    text-align: left!important;
    border-left-width: 5px!important;
    border-right-width: 0!important;
    tab-size: 4;
    hyphens: none;
}
pre.syntaxbox {
    white-space: pre-wrap;
    border-radius: 3px;
}
a.no-border {

.post-body .label {
    border-radius: 1px;
    padding: 0 5px;
}

.note {
    background-color: #f5f5f5;
}

.note code {
    background-color: #f8f1f4;
    color: #c01d54;
}
.syntaxbox {
    font-size: 1rem;
    background: #eee;
    border: 0 solid #3d7e9a;
    color: #333;
    margin-top: 0;
    margin-bottom: 20px;
    padding: 15px;
    position: relative;
    font-family: consolas,monaco,"Andale Mono",monospace;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
    overflow: auto;
    direction: ltr!important;
    text-align: left!important;
    border-left-width: 5px!important;
    border-right-width: 0!important;
    tab-size: 4;
    hyphens: none;
}
pre.syntaxbox {
    white-space: pre-wrap;
    border-radius: 3px;
}

//Animation btn
div.NeroBtn {
    background: #031321;
}
a.NeroBtn {
    position: relative;
    display: inline-block;
    padding: 8px 16px;
    color: #2196f3;
    letter-spacing: 4px;
    text-decoration: none;
    font-size: 18px;
    overflow: hidden;
    transition: 0.2s;
}
a.NeroBtn:hover {
    color: #2196f3;
    background: #031321;
    box-shadow: 0 0 10px #2196f3, 0 0 40px #2196f3, 0 0 80px #2196f3;
    transition-delay: 1s;
}
a.NeroBtn span {
  position: absolute;
  display: block;
}
a.NeroBtn span:nth-child(1) {
  top: 0;
  left: -100%;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, transparent, #2196f3);
}
a.NeroBtn:hover span:nth-child(1) {
  left: 100%;
  transition: 1s;
}
a.NeroBtn span:nth-child(3) {
  bottom: 0;
  right: -100%;
  width: 100%;
  height: 2px;
  background: linear-gradient(270deg, transparent, #2196f3);
}
a.NeroBtn:hover span:nth-child(3) {
  right: 100%;
  transition: 1s;
  transition-delay: 0.5s;
}
a.NeroBtn span:nth-child(2) {
  right: 0;
  top: -100%;
  width: 2px;
  height: 100%;
  background: linear-gradient(180deg, transparent, #2196f3);
}
a.NeroBtn:hover span:nth-child(2) {
  top: 100%;
  transition: 1s;
  transition-delay: 0.25s;
}
a.NeroBtn span:nth-child(4) {
  left: 0;
  bottom: -100%;
  width: 2px;
  height: 100%;
  background: linear-gradient(360deg, transparent, #2196f3);
}
a.NeroBtn:hover span:nth-child(4) {
  bottom: 100%;
  transition: 1s;
  transition-delay: 0.75s;
}
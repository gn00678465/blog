//syntaxbox
.syntaxbox {
    font-size: 1rem;
    background: #eee;
    border: 0 solid #3d7e9a;
    color: #333;
    margin-top: 0;
    margin-bottom: 20px;
    padding: 15px;
    position: relative;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
    overflow: auto;
    direction: ltr!important;
    text-align: left!important;
    border-left-width: 5px!important;
    border-right-width: 0!important;
    tab-size: 4;
    hyphens: none;
}

pre.syntaxbox {
    white-space: pre-wrap;
    border-radius: 3px;
}
a.no-border {
    border: none;
}

//btn effect
a.btnEft {
  position: relative;
  display: inline-block;
  padding: 8px 16px;
  border: 2px solid #111;
  color: #111;
  text-decoration: none;
  font-weight: 600;
  font-size: 18px;
  text-transform: uppercase;
  > span {
    z-index: 3;
    position: relative;
  }
  &::before {
    content: '';
    position:absolute;
    top: 6px;
    left: -2px;
    width: calc(100% + 4px);
    height: calc(100% - 12px);
    background: #fff;
    transition: 0.5s ease-in-out;
    transform: scaleY(1);
  }
  &::after {
    content: '';
    position:absolute;
    left: 6px;
    top: -2px;
    height: calc(100% + 4px);
    width: calc(100% - 12px);
    background: #fff;
    transition: 0.5s ease-in-out;
    transform: scaleX(1);
  }
}
a.btnEft:hover {
  &::before {
    transform: scaleY(0);
  }
  &::after {
    transform: scaleX(0);
  }
}
// result
.result {
  width: 95%;
  margin: 45px auto 20px;
  background: radial-gradient(#f3e7e9, #e3eeff);
  position: relative;
  padding: 5px 10px;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
}
.result::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 35px;
  left: 0;
  top: -35px;
  background: linear-gradient(#0c0c0c, #272728);
  box-shadow: inset 0px -2px 0px 0px rgba(255, 255, 255, 0.19);
}
.result::after {
  content: "Result";
  position: absolute;
  width: 90px;
  height: 35px;
  left: 0;
  top: -35px;
  box-shadow: inset 0px -2px 0px 0px rgba(255, 255, 255, 0.19);
  cursor: pointer;
  font-size: 1rem;
  color: white;
  text-align: center;
  line-height: 35px;
  background: linear-gradient(#416613, #547d1b);
}